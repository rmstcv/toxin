    Вызов:
      +like-button({
        isLiked: false,
      })

mixin like-button(options)
  - 
    var isLike = ""
    isLike += options.isLiked ? "1" : "0"

  div(class='like-button js-like-button' data-likes=''  data-isLiked= isLike)
    .like-button__content.js-like-button__content
      .like-button__heart.like-button__heart_uncolored.js-like-button__heart_uncolored
        img(src=require("/blocks/button-like/" + "heart" + ".svg") alt="image" loading="lazy")
      .like-button__heart.like-button__heart_colored.js-like-button__heart_colored
        img(src=require("/blocks/button-like/" + "heart-active" + ".svg") alt="image" loading="lazy")
    .like-button__number-of-likes.js-like-button__number-of-likes