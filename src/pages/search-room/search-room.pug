include ../../blocks/header/header.pug
include ../../blocks/footer/footer.pug
include ../../blocks/dropdown-date/dropdown-date.pug
include ../../blocks/dropdown/dropdown.pug

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Toxin
    
  body
    .search-room
      .search-room-container
        +header({logged: false})
        .container
          .search-room-content
            .search-room__filter
              +dropdown-date({
                fieldName: "даты пребывания в отеле", 
                type: "text", 
                placeholder: "ДД.ММ.ГГГГ",
              })
              +dropdown({
                fieldName: "ГОСТИ",
                dropdownName: "guests",
                defaultItems: [
                  {"name":"взрослые","value":"0", "max":"3","min":"0"},
                  {"name":"дети","value":"0","max":"3","min":"0"},
                  {"name":"младенцы","value":"0", "max":"3","min":"0"}
                ],
                defaultContent: "Сколько гостей",
                confirmPanel: true,
              })
            .search-room__rooms
        +footer()